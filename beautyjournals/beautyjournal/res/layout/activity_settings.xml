<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/titlebar_bg"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:text="@string/setting"
                    style="@style/titleBarText"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="14dp" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/user_info_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_bg_top_s"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip" >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/label_phone"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <ImageView
                            android:id="@+id/arrow0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:contentDescription="@string/empty"
                            android:src="@drawable/arrow"
                            android:visibility="invisible" />

                        <TextView
                                android:id="@+id/phoneNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:layout_toLeftOf="@+id/arrow0"
                                android:text="TEST"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/default_pink_color"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_bg_middle_s"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip" >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/label_username"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <ImageView
                            android:id="@+id/arrow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/arrow"
                            android:contentDescription="@string/empty"
                            android:visibility="invisible" />

                        <TextView
                                android:id="@+id/nickname_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:layout_toLeftOf="@+id/arrow1"
                                android:text="TEST"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/default_pink_color"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg_middle_s"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:clickable="true"
                            android:id="@+id/gender_view">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/label_gender"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <ImageView
                                android:id="@+id/arrow2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/arrow"/>

                        <TextView
                                android:id="@+id/gender_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:layout_toLeftOf="@+id/arrow2"
                                android:text="TEST"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/default_pink_color"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg_middle_s"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:clickable="true"
                            android:id="@+id/changepasswd_view">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/label_changepasswd"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <ImageView
                                android:id="@+id/arrow12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/arrow"/>

                        <TextView
                                android:id="@+id/changepasswd_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:layout_toLeftOf="@+id/arrow12"
                                android:text="@string/empty"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/default_pink_color"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg_bottom"
                            android:gravity="center_vertical"
                            android:padding="10dip"
                            android:id="@+id/avatar_layout">

                        <TextView
                                android:layout_width="100dip"
                                android:layout_height="100dip"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="@string/label_avatar"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <ImageView
                                android:id="@+id/arrow3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/arrow"/>

                        <com.i2mobi.widget.PhotoChooseView
                                android:id="@+id/image"
                                android:layout_width="80dip"
                                android:layout_height="80dip"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dip"
                                android:layout_toLeftOf="@+id/arrow3"
                                android:src="@drawable/ic_launcher"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/address_manager"
                            android:layout_width="match_parent"
                            android:layout_height="44dip"
                            android:layout_marginBottom="15dip"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/button_product_instro"
                            android:clickable="true"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="@string/label_shipping_address"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <ImageView
                                android:id="@+id/arrow4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="30dip"
                                android:src="@drawable/arrow"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_bg_top_s"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/label_feedback"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <ImageView
                            android:id="@+id/arrow5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_bg_middle_s"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/label_order"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <ImageView
                            android:id="@+id/arrow7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_bg_bottom_s"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/label_about"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <ImageView
                            android:id="@+id/arrow6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                </RelativeLayout>

		        <Button
		            android:id="@+id/logout_button"
		            android:layout_marginTop="20dip"
		            android:text="@string/log_out"
		            style="@style/default_button" />
                
                <View
                        android:layout_width="match_parent"
                        android:layout_height="20dip"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/picture_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/picture_pickerbutton"
                    android:drawableLeft="@drawable/camera"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dip"
                    android:text="@string/title_button_camera"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"/>

            <TextView
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/picture_pickerbutton"
                    android:drawableLeft="@drawable/gallery"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dip"
                    android:text="@string/title_button_gallery"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
