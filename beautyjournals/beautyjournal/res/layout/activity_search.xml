<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/search_rect_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/find_find"/>
            <EditText
                android:layout_weight="1"
                style="@style/accountEditText"
                android:id="@+id/search_edit"
                 />
            <ImageView
                android:id="@+id/search_cancle_1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/search_cancle"/>

            </LinearLayout>
            <TextView
            android:id="@+id/search_cancle_2"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />
        </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:id="@+id/choose">
            <TextView
                android:id="@+id/search_article"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/left_article_2"
                android:text="文章"
                android:gravity="center"/>
            <TextView
                android:id="@+id/search_goods"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="商品"
                android:gravity="center"
                android:background="@drawable/right_product_2"/>
            </LinearLayout>

            <ListView
                android:layout_below="@+id/choose"
                android:id="@+id/choose_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
</RelativeLayout>