<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:background="#ff81a9">
                <ImageView
                    android:layout_marginLeft="10dip"
                    android:id="@+id/back_comment"
                    android:layout_width="30dip"
                    android:layout_height="match_parent"
                    android:src="@drawable/left_arrow_2"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="80dip"
                    android:layout_width="110dip"
                    android:layout_height="match_parent"
                    android:text="文章评论"
                    android:textSize="25dip"
                    android:textColor="#ffffff"/>
                <ImageView
                    android:layout_marginLeft="50dip"
                    android:layout_width="40dip"
                    android:layout_height="match_parent"
                    android:src="@drawable/article_reflesh"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dip"
                android:background="#f7f7f7"
                android:gravity="center_vertical">
                <EditText
                    android:layout_marginLeft="10dip"
                    android:hint="写评论"
                    android:layout_width="300dip"
                    android:layout_height="36dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="80dip"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:text="没有评论，你就是楼主哦！"/>
                    <Button
                        android:id="@+id/commit_article_comment"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dip"
                        android:layout_width="100dip"
                        android:layout_height="40dip"
                        android:text="发表评论"
                        />

                </LinearLayout>
                <ListView
                        android:id="@+id/list_article_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                </ListView>

            </LinearLayout>
</LinearLayout>