<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="179dip"
         android:background="@drawable/detail_article_top">
        <TextView
            android:layout_marginTop="130dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:text="浪漫蓝色眼妆复古魅力女人味"
            android:textSize="20dip"
            android:textColor="#ffffff"/>
         </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dip"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/detail_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三分钟，打造时装周"
                android:textSize="15dip"/>
            <TextView
                android:id="@+id/meizhuang_time"
                android:layout_below="@+id/detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五分钟前"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_arcticle_new"
                android:layout_below="@+id/detail_content"
                android:layout_toRightOf="@+id/meizhuang_time"/>
            </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#adadad"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/detail_content_2"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三分钟，打造时装周"/>
            <TextView
                android:id="@+id/meizhuang_time_2"
                android:layout_below="@+id/detail_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五分钟前"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_arcticle_new"
                android:layout_below="@+id/detail_content_2"
                android:layout_toRightOf="@+id/meizhuang_time_2"
                android:visibility="gone"/>

            </RelativeLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#adadad"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:id="@+id/detail_content_3"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三分钟，打造时装周"/>
            <TextView
                android:id="@+id/meizhuang_time_3"
                android:layout_below="@+id/detail_content_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五分钟前"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_arcticle_new"
                android:layout_below="@+id/detail_content_3"
                android:layout_toRightOf="@+id/meizhuang_time_3"
                android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#adadad"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/detail_content_4"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三分钟，打造时装周"/>
            <TextView
                android:id="@+id/meizhuang_time_4"
                android:layout_below="@+id/detail_content_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五分钟前"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_arcticle_new"
                android:layout_below="@+id/detail_content_4"
                android:layout_toRightOf="@+id/meizhuang_time_4"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#adadad"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/detail_content_5"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三分钟，打造时装周"/>
            <TextView
                android:id="@+id/meizhuang_time_5"
                android:layout_below="@+id/detail_content_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五分钟前"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_arcticle_new"
                android:layout_below="@+id/detail_content_5"
                android:layout_toRightOf="@+id/meizhuang_time_5"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout></LinearLayout>