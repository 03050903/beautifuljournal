<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff81A9">

        <ImageView
            android:id="@+id/article_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:src="@drawable/left_arrow_2"/>

        <TextView
            android:id="@+id/article_list_title"
            android:layout_marginLeft="80dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        </LinearLayout>
    <RadioGroup
        android:id="@+id/meizhuan_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/background_detail_2">

        <RadioButton
            style="@style/detail_article_2_radio"
            android:text="整体妆容"/>
        <RadioButton
            style="@style/detail_article_2_radio"
            android:text="局部妆容"/>
        <RadioButton
            style="@style/detail_article_2_radio"
            android:text="化妆技巧"/>
        <RadioButton
            style="@style/detail_article_2_radio"
            android:text="美妆知识"/>
        <RadioButton
            style="@style/detail_article_2_radio"
            android:text="美妆工具"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>