<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dip"
    android:gravity="bottom">
    <!-- 尽量使用dip作为单位，自适应屏幕分辨率 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:background="@drawable/tab_background_2_2"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dip"
                    >
                    <LinearLayout
                        android:layout_width="40dip"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:id="@+id/home_page"
                            android:layout_marginTop="5dip"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tab_home_2"/>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="首页"/>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dip"
                    >
                        <LinearLayout
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            >
                            <ImageView
                                android:id="@+id/shoping_city"
                                android:layout_marginTop="5dip"
                                android:layout_gravity="center_vertical"
                                android:layout_width="40dip"
                                android:layout_height="wrap_content"
                                android:src="@drawable/tab_store_2"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:text="商城"/>
                        </LinearLayout>
                    </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/person_center"
            android:layout_gravity="center"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/tab_center_logo_2"/>
    </FrameLayout>
</LinearLayout>